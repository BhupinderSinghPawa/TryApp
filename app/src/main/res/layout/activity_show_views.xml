<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="myButtonOnClick"
    android:orientation="vertical"
    tools:context=".ShowViews">

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:capitalize="none"
        android:cursorVisible="true"
        android:editable="true"
        android:gravity="center"
        android:text="Bhupinder Singh Pawa"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="12dp"
        android:onClick="myButtonOnClick"
        android:text="Toast"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="252dp"
        android:layout_height="55dp"
        android:layout_below="@+id/myEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="9dp"
        android:background="#9C27B0"
        android:contentDescription="describes password"
        android:drawableStart="@android:drawable/ic_menu_compass"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/PlayImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PrevImageButton"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/PrevImageButton"
        android:layout_toRightOf="@+id/PrevImageButton"
        android:onClick="mediaButtonOnClick"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/PrevImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="14dp"
        android:onClick="mediaButtonOnClick"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/NextImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PlayImageButton"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/PlayImageButton"
        android:layout_toRightOf="@+id/PlayImageButton"
        android:onClick="mediaButtonOnClick"
        app:srcCompat="@android:drawable/ic_media_next" />

    <CheckBox
        android:id="@+id/VCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VCheckBox3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="24dp"
        android:text="Blue" />

    <CheckBox
        android:id="@+id/VCheckBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VCheckBox2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="24dp"
        android:text="Indigo" />

    <CheckBox
        android:id="@+id/VCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PrevImageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="24dp"
        android:text="Violet" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="42dp"
        android:checked="true"
        android:text="ToggleButton" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="49dp"
        android:layout_toEndOf="@+id/toggleButton"
        android:layout_toRightOf="@+id/toggleButton"
        android:text="Switch"
        android:textOff="Off "
        android:textOn="On" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="43dp"
        android:layout_toEndOf="@+id/switch1"
        android:layout_toRightOf="@+id/switch1"
        android:clickable="true"
        app:srcCompat="@android:drawable/sym_action_call" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayImageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Green" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yellow" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Orange" />
    </RadioGroup>

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VCheckBox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="49dp" />

</RelativeLayout>